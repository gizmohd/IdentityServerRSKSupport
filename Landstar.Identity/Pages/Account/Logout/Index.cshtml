@page
@model Landstar.Identity.Pages.Account.Logout.Index
@inject IStringLocalizer<SharedResource> Localizer

<div class="logout-page">
  <div class="lead">
    <h1>@Localizer["Logout"]</h1>
    <p>@Localizer["Would you like to logout of your Landstar account?"]</p>
  </div>

  <form asp-page="/Account/Logout/Index">
    <input type="hidden" name="logoutId" value="@Model.LogoutId" />

    <div class="form-group">
      <button class="btn btn-primary">Yes</button>
    </div>
  </form>
</div>